<div class="mt-4 p-4 rounded-lg <%= validation[:valid] ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200' %>">
  <div class="flex">
    <div class="flex-shrink-0">
      <% if validation[:valid] %>
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      <% else %>
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
      <% end %>
    </div>
    
    <div class="ml-3">
      <h3 class="text-sm font-medium <%= validation[:valid] ? 'text-green-800' : 'text-red-800' %>">
        <%= validation[:valid] ? 'Valid Tax ID' : 'Invalid Tax ID' %>
      </h3>
      
      <% if validation[:details] %>
        <div class="mt-2 text-sm <%= validation[:valid] ? 'text-green-700' : 'text-red-700' %>">
          <% if validation[:details][:company_name] %>
            <p><strong>Company:</strong> <%= validation[:details][:company_name] %></p>
          <% end %>
          <% if validation[:details][:tax_type] %>
            <p><strong>Type:</strong> <%= validation[:details][:tax_type] %></p>
          <% end %>
          <% if validation[:details][:region] %>
            <p><strong>Region:</strong> <%= validation[:details][:region] %></p>
          <% end %>
        </div>
      <% end %>
      
      <% if validation[:errors] && validation[:errors].any? %>
        <div class="mt-2 text-sm text-red-700">
          <ul class="list-disc list-inside">
            <% validation[:errors].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>