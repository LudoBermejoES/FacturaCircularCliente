<% breadcrumb ["Tax Rates", tax_rates_path], ["Tax Calculator", new_tax_calculation_path], "Results" %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Header -->
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Tax Calculation Results</h1>
    <p class="mt-1 text-sm text-gray-600">Detailed breakdown of tax calculations</p>
  </div>
  
  <!-- Calculation Summary -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Calculation Summary</h2>
    
    <div class="space-y-4">
      <!-- Visual Tax Breakdown -->
      <div class="relative">
        <div class="flex items-center">
          <div class="flex-1">
            <div class="relative pt-1">
              <div class="flex mb-2 items-center justify-between">
                <div>
                  <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-600 bg-blue-200">
                    Base Amount
                  </span>
                </div>
                <div class="text-right">
                  <span class="text-xs font-semibold inline-block text-blue-600">
                    <%= format_currency(@result[:base_amount]) %>
                  </span>
                </div>
              </div>
              <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-200">
                <div style="width: 100%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"></div>
              </div>
            </div>
          </div>
        </div>
        
        <% if @result[:discount_amount] && @result[:discount_amount] > 0 %>
          <div class="flex items-center">
            <div class="flex-1">
              <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                  <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-red-600 bg-red-200">
                      Discount (<%= format_percentage(@result[:discount_percentage]) %>)
                    </span>
                  </div>
                  <div class="text-right">
                    <span class="text-xs font-semibold inline-block text-red-600">
                      -<%= format_currency(@result[:discount_amount]) %>
                    </span>
                  </div>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-red-200">
                  <div style="width: <%= (@result[:discount_amount] / @result[:base_amount] * 100).round %>%" 
                       class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-red-500"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        
        <div class="flex items-center">
          <div class="flex-1">
            <div class="relative pt-1">
              <div class="flex mb-2 items-center justify-between">
                <div>
                  <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-green-600 bg-green-200">
                    Tax (<%= format_percentage(@result[:tax_rate]) %>)
                  </span>
                </div>
                <div class="text-right">
                  <span class="text-xs font-semibold inline-block text-green-600">
                    +<%= format_currency(@result[:tax_amount]) %>
                  </span>
                </div>
              </div>
              <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-green-200">
                <div style="width: <%= (@result[:tax_amount] / @result[:subtotal] * 100).round %>%" 
                     class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-500"></div>
              </div>
            </div>
          </div>
        </div>
        
        <% if @result[:surcharge_amount] && @result[:surcharge_amount] > 0 %>
          <div class="flex items-center">
            <div class="flex-1">
              <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                  <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-purple-600 bg-purple-200">
                      Equivalence Surcharge (<%= format_percentage(@result[:surcharge_percentage]) %>)
                    </span>
                  </div>
                  <div class="text-right">
                    <span class="text-xs font-semibold inline-block text-purple-600">
                      +<%= format_currency(@result[:surcharge_amount]) %>
                    </span>
                  </div>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-purple-200">
                  <div style="width: <%= (@result[:surcharge_amount] / @result[:subtotal] * 100).round %>%" 
                       class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-purple-500"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        
        <% if @result[:retention_amount] && @result[:retention_amount] > 0 %>
          <div class="flex items-center">
            <div class="flex-1">
              <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                  <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-orange-600 bg-orange-200">
                      IRPF Retention (<%= format_percentage(@result[:retention_percentage]) %>)
                    </span>
                  </div>
                  <div class="text-right">
                    <span class="text-xs font-semibold inline-block text-orange-600">
                      -<%= format_currency(@result[:retention_amount]) %>
                    </span>
                  </div>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-orange-200">
                  <div style="width: <%= (@result[:retention_amount] / @result[:subtotal] * 100).round %>%" 
                       class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-orange-500"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Detailed Breakdown Table -->
      <div class="border-t pt-4">
        <table class="min-w-full">
          <tbody class="divide-y divide-gray-200">
            <tr>
              <td class="py-2 text-sm text-gray-600">Base Amount</td>
              <td class="py-2 text-sm text-right font-medium text-gray-900">
                <%= format_currency(@result[:base_amount]) %>
              </td>
            </tr>
            
            <% if @result[:discount_amount] && @result[:discount_amount] > 0 %>
              <tr>
                <td class="py-2 text-sm text-gray-600">
                  Discount (<%= format_percentage(@result[:discount_percentage]) %>)
                </td>
                <td class="py-2 text-sm text-right font-medium text-red-600">
                  -<%= format_currency(@result[:discount_amount]) %>
                </td>
              </tr>
            <% end %>
            
            <tr class="font-semibold">
              <td class="py-2 text-sm text-gray-900">Subtotal</td>
              <td class="py-2 text-sm text-right text-gray-900">
                <%= format_currency(@result[:subtotal]) %>
              </td>
            </tr>
            
            <tr>
              <td class="py-2 text-sm text-gray-600">
                Tax (<%= format_percentage(@result[:tax_rate]) %>)
              </td>
              <td class="py-2 text-sm text-right font-medium text-gray-900">
                <%= format_currency(@result[:tax_amount]) %>
              </td>
            </tr>
            
            <% if @result[:surcharge_amount] && @result[:surcharge_amount] > 0 %>
              <tr>
                <td class="py-2 text-sm text-gray-600">
                  Equivalence Surcharge (<%= format_percentage(@result[:surcharge_percentage]) %>)
                </td>
                <td class="py-2 text-sm text-right font-medium text-gray-900">
                  <%= format_currency(@result[:surcharge_amount]) %>
                </td>
              </tr>
            <% end %>
            
            <% if @result[:retention_amount] && @result[:retention_amount] > 0 %>
              <tr>
                <td class="py-2 text-sm text-gray-600">
                  IRPF Retention (<%= format_percentage(@result[:retention_percentage]) %>)
                </td>
                <td class="py-2 text-sm text-right font-medium text-orange-600">
                  -<%= format_currency(@result[:retention_amount]) %>
                </td>
              </tr>
            <% end %>
            
            <tr class="font-bold text-lg border-t-2">
              <td class="pt-4 text-gray-900">Total</td>
              <td class="pt-4 text-right text-gray-900">
                <%= format_currency(@result[:total]) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <!-- Tax Information -->
      <% if @result[:tax_details] %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-2">Tax Information</h3>
          <div class="text-sm text-blue-800 space-y-1">
            <% if @result[:tax_details][:type] %>
              <p><strong>Tax Type:</strong> <%= @result[:tax_details][:type] %></p>
            <% end %>
            <% if @result[:tax_details][:region] %>
              <p><strong>Region:</strong> <%= @result[:tax_details][:region] %></p>
            <% end %>
            <% if @result[:tax_details][:applicable_law] %>
              <p><strong>Applicable Law:</strong> <%= @result[:tax_details][:applicable_law] %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Actions -->
  <div class="flex justify-between">
    <%= link_to new_tax_calculation_path, 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
      <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
      </svg>
      New Calculation
    <% end %>
    
    <button type="button" 
            onclick="window.print()"
            class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
      <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
      </svg>
      Print Results
    </button>
  </div>
</div>