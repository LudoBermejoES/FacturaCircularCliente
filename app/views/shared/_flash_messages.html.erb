<% if flash.any? %>
  <div class="mb-6" data-controller="flash">
    <% flash.each do |type, message| %>
      <% alert_class = case type
           when 'notice', 'success' then 'bg-green-50 text-green-800 border-green-200'
           when 'alert', 'error' then 'bg-red-50 text-red-800 border-red-200'
           when 'warning' then 'bg-yellow-50 text-yellow-800 border-yellow-200'
           else 'bg-blue-50 text-blue-800 border-blue-200'
         end
         
         icon_class = case type
           when 'notice', 'success' then 'text-green-400'
           when 'alert', 'error' then 'text-red-400'
           when 'warning' then 'text-yellow-400'
           else 'text-blue-400'
         end
      %>
      
      <div class="rounded-md border p-4 <%= alert_class %>" data-flash-target="message">
        <div class="flex">
          <div class="flex-shrink-0">
            <% if type == 'notice' || type == 'success' %>
              <svg class="h-5 w-5 <%= icon_class %>" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
            <% elsif type == 'alert' || type == 'error' %>
              <svg class="h-5 w-5 <%= icon_class %>" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            <% else %>
              <svg class="h-5 w-5 <%= icon_class %>" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
          <div class="ml-3 flex-1">
            <p class="text-sm font-medium">
              <%= message %>
            </p>
          </div>
          <div class="ml-3">
            <button type="button" class="-m-1.5 p-1.5" data-action="click->flash#close">
              <span class="sr-only">Dismiss</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L12.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>