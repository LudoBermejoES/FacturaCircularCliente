<div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-64 lg:flex-col" data-navigation-target="sidebar">
  <div class="flex grow flex-col gap-y-5 overflow-y-auto border-r border-gray-200 bg-white px-6 pb-4">
    <div class="flex h-16 shrink-0 items-center">
      <h2 class="text-xl font-bold text-indigo-600">FacturaCircular</h2>
    </div>
    
    <nav class="flex flex-1 flex-col">
      <ul role="list" class="flex flex-1 flex-col gap-y-7">
        <li>
          <ul role="list" class="-mx-2 space-y-1">
            <li>
              <%= link_to dashboard_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(dashboard_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                <svg class="h-6 w-6 shrink-0 <%= current_page?(dashboard_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                </svg>
                Dashboard
              <% end %>
            </li>
            
            <li>
              <%= link_to invoices_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(invoices_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                <svg class="h-6 w-6 shrink-0 <%= current_page?(invoices_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Invoices
              <% end %>
            </li>
            
            <li>
              <%= link_to companies_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(companies_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                <svg class="h-6 w-6 shrink-0 <%= current_page?(companies_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z" />
                </svg>
                Companies
              <% end %>
            </li>

            <li>
              <%= link_to products_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(products_path) || request.path.include?('products') ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                <svg class="h-6 w-6 shrink-0 <%= current_page?(products_path) || request.path.include?('products') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                </svg>
                Products
              <% end %>
            </li>

            <!-- Tax Management Dropdown -->
            <li data-controller="dropdown">
              <button data-action="click->dropdown#toggle" class="group flex w-full gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-gray-700 hover:text-indigo-600 hover:bg-gray-50">
                <svg class="h-6 w-6 shrink-0 text-gray-400 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
                </svg>
                Tax Management
                <svg data-dropdown-target="icon" class="ml-auto h-4 w-4 shrink-0 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                </svg>
              </button>

              <ul data-dropdown-target="menu" class="hidden mt-2 ml-6 space-y-1">
                <li>
                  <%= link_to tax_jurisdictions_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(tax_jurisdictions_path) || request.path.include?('tax_jurisdictions') ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                    <svg class="h-5 w-5 shrink-0 <%= current_page?(tax_jurisdictions_path) || request.path.include?('tax_jurisdictions') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3s-4.5 4.03-4.5 9 2.015 9 4.5 9z" />
                    </svg>
                    Tax Jurisdictions
                  <% end %>
                </li>

                <li>
                  <%= link_to company_establishments_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(company_establishments_path) || request.path.include?('company_establishments') ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                    <svg class="h-5 w-5 shrink-0 <%= current_page?(company_establishments_path) || request.path.include?('company_establishments') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                    Establishments
                  <% end %>
                </li>

                <li>
                  <%= link_to tax_rates_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(tax_rates_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                    <svg class="h-5 w-5 shrink-0 <%= current_page?(tax_rates_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75V18m-7.5-6.75h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V13.5zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V18zm2.498-6.75h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V13.5zm0 2.25h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V18zm2.504-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zm0 2.25h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V18zm2.498-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zM8.25 6h7.5v2.25h-7.5V6zM12 2.25c-1.892 0-3.758.11-5.593.322C5.307 2.7 4.5 3.65 4.5 4.757V19.5a2.25 2.25 0 002.25 2.25h10.5a2.25 2.25 0 002.25-2.25V4.757c0-1.108-.806-2.057-1.907-2.185A48.507 48.507 0 0012 2.25z" />
                    </svg>
                    Tax Rates
                  <% end %>
                </li>

                <li>
                  <%= link_to tax_calculations_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(tax_calculations_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                    <svg class="h-5 w-5 shrink-0 <%= current_page?(tax_calculations_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75l-2.498-2.498m0 0l-2.252-2.252a3.375 3.375 0 114.772 4.772l-2.022 2.022zm-2.498-2.498l2.498 2.498a3.375 3.375 0 01-4.772-4.772l2.274-2.274z" />
                    </svg>
                    Tax Calculator
                  <% end %>
                </li>
              </ul>
            </li>
            
            <li>
              <%= link_to workflow_definitions_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(workflow_definitions_path) || request.path.include?('workflow_definitions') ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                <svg class="h-6 w-6 shrink-0 <%= current_page?(workflow_definitions_path) || request.path.include?('workflow_definitions') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
                </svg>
                Workflows
              <% end %>
            </li>
            
            <li>
              <%= link_to "#", class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-gray-700 hover:text-indigo-600 hover:bg-gray-50" do %>
                <svg class="h-6 w-6 shrink-0 text-gray-400 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
                </svg>
                Reports
                <span class="ml-auto rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">Coming soon</span>
              <% end %>
            </li>
          </ul>
        </li>
        
        <% if can?(:view, :users) && current_company_id %>
        <li>
          <div class="text-xs font-semibold leading-6 text-gray-400">Administration</div>
          <ul role="list" class="-mx-2 mt-2 space-y-1">
            <% if %w[owner admin manager].include?(current_user_role) %>
            <li>
              <%= link_to company_users_path(current_company_id), 
                  class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{request.path.include?('/users') ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
                <svg class="h-6 w-6 shrink-0 <%= request.path.include?('/users') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600' %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                </svg>
                Company Users
              <% end %>
            </li>
            <% end %>
            
          </ul>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>

<!-- Mobile sidebar -->
<div class="lg:hidden fixed inset-0 z-50 hidden" data-navigation-target="overlay">
  <div class="fixed inset-0 bg-gray-900/80" data-action="click->navigation#closeSidebar"></div>
  
  <div class="fixed inset-y-0 left-0 z-50 w-64 bg-white">
    <div class="flex h-16 items-center justify-between px-6">
      <h2 class="text-xl font-bold text-indigo-600">FacturaCircular</h2>
      <button type="button" class="-m-2.5 p-2.5" data-action="click->navigation#closeSidebar">
        <span class="sr-only">Close sidebar</span>
        <svg class="h-6 w-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
