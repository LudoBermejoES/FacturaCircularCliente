<%= form_with scope: :invoice_series, url: @invoice_series[:id] ? company_invoice_series_path(@company[:id], @invoice_series[:id]) : company_invoice_series_index_path(@company[:id]), method: @invoice_series[:id] ? :patch : :post, local: true do |form| %>
  <% if @invoice_series[:errors].present? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @invoice_series[:errors].each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <!-- Series Code -->
      <div>
        <%= form.label :series_code, class: "block text-sm font-medium text-gray-700" %>
        <% if @invoice_series[:id] %>
          <p class="mt-1 text-sm text-gray-900"><%= @invoice_series[:series_code] %></p>
          <p class="mt-1 text-sm text-gray-500">Series code cannot be changed after creation</p>
        <% else %>
          <%= form.select :series_code, 
              options_for_select(@series_codes, @invoice_series[:series_code]),
              { prompt: "Select a series code" },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
              required: true %>
        <% end %>
      </div>

      <!-- Year -->
      <div>
        <%= form.label :year, class: "block text-sm font-medium text-gray-700" %>
        <% if @invoice_series[:id] %>
          <p class="mt-1 text-sm text-gray-900"><%= @invoice_series[:year] %></p>
          <p class="mt-1 text-sm text-gray-500">Year cannot be changed after creation</p>
        <% else %>
          <%= form.number_field :year, 
              value: @invoice_series[:year] || Date.current.year,
              min: 2020,
              max: Date.current.year + 1,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
              required: true %>
        <% end %>
      </div>

      <!-- Series Type -->
      <div>
        <%= form.label :series_type, class: "block text-sm font-medium text-gray-700" %>
        <% if @invoice_series[:id] %>
          <p class="mt-1 text-sm text-gray-900"><%= @invoice_series[:series_type]&.humanize %></p>
          <p class="mt-1 text-sm text-gray-500">Series type cannot be changed after creation</p>
        <% else %>
          <%= form.select :series_type,
              options_for_select(@series_types, @invoice_series[:series_type]),
              { prompt: "Select a series type" },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
              required: true %>
        <% end %>
      </div>

      <!-- Series Name -->
      <div>
        <%= form.label :series_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :series_name,
            value: @invoice_series[:series_name],
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
            required: true,
            placeholder: "e.g., Commercial Invoices 2025" %>
      </div>
    </div>

    <!-- Legal Justification -->
    <div>
      <%= form.label :legal_justification, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :legal_justification,
          value: @invoice_series[:legal_justification],
          rows: 3,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          placeholder: "Reason for creating or modifying this series (required for compliance)" %>
      <p class="mt-2 text-sm text-gray-500">Required for Spanish tax compliance</p>
    </div>

    <!-- Checkboxes -->
    <div class="space-y-4">
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= form.check_box :is_active,
              checked: @invoice_series[:is_active],
              class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        </div>
        <div class="ml-3 text-sm">
          <%= form.label :is_active, class: "font-medium text-gray-700" %>
          <p class="text-gray-500">Series can be used for new invoices</p>
        </div>
      </div>

      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= form.check_box :is_default,
              checked: @invoice_series[:is_default],
              class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        </div>
        <div class="ml-3 text-sm">
          <%= form.label :is_default, "Default series", class: "font-medium text-gray-700" %>
          <p class="text-gray-500">Use this series by default for invoices of this type</p>
        </div>
      </div>
    </div>

    <!-- Current Status (for existing series) -->
    <% if @invoice_series[:id] %>
      <div class="bg-gray-50 px-4 py-5 sm:rounded-lg sm:p-6">
        <div class="sm:flex sm:items-start sm:justify-between">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Series Information</h3>
            <div class="mt-2 max-w-xl text-sm text-gray-500">
              <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                <div>
                  <dt class="font-medium">Current Number:</dt>
                  <dd><%= @invoice_series[:current_number] || 0 %></dd>
                </div>
                <div>
                  <dt class="font-medium">Created:</dt>
                  <dd><%= @invoice_series[:created_at] ? Date.parse(@invoice_series[:created_at]).strftime("%B %d, %Y") : "-" %></dd>
                </div>
                <% if @invoice_series[:activation_date] %>
                  <div>
                    <dt class="font-medium">Activation Date:</dt>
                    <dd><%= Date.parse(@invoice_series[:activation_date]).strftime("%B %d, %Y") %></dd>
                  </div>
                <% end %>
                <% if @invoice_series[:deactivation_date] %>
                  <div>
                    <dt class="font-medium">Deactivation Date:</dt>
                    <dd><%= Date.parse(@invoice_series[:deactivation_date]).strftime("%B %d, %Y") %></dd>
                  </div>
                <% end %>
              </dl>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Form Actions -->
  <div class="mt-6 flex items-center justify-end space-x-3">
    <%= link_to "Cancel", 
        @invoice_series[:id] ? company_invoice_series_path(@company[:id], @invoice_series[:id]) : company_invoice_series_index_path(@company[:id]),
        class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    
    <%= form.submit @invoice_series[:id] ? "Update Series" : "Create Series",
        class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>