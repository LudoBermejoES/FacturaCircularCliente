<% breadcrumb ["Companies", companies_path], [@company[:name], company_path(@company[:id])], ["Invoice Series", company_invoice_series_index_path(@company[:id])], @invoice_series[:series_name] %>

<div class="space-y-6">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @invoice_series[:series_name] %></h1>
      <div class="mt-2 flex items-center space-x-3">
        <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
          <%= @invoice_series[:series_code] %>
        </span>
        <span class="text-sm text-gray-500">Year: <%= @invoice_series[:year] %></span>
        <% if @invoice_series[:is_default] %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
            Default
          </span>
        <% end %>
        <% if @invoice_series[:is_active] %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
            Active
          </span>
        <% else %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
            Inactive
          </span>
        <% end %>
      </div>
    </div>
    
    <div class="mt-4 sm:mt-0 flex space-x-3">
      <%= link_to edit_company_invoice_series_path(@company[:id], @invoice_series[:id]),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
        Edit
      <% end %>
      
      <% if @invoice_series[:is_active] %>
        <%= button_to deactivate_company_invoice_series_path(@company[:id], @invoice_series[:id]),
            method: :post,
            params: { reason: "Manual deactivation" },
            data: { confirm: "Are you sure you want to deactivate this series?" },
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
          </svg>
          Deactivate
        <% end %>
      <% else %>
        <%= button_to activate_company_invoice_series_path(@company[:id], @invoice_series[:id]),
            method: :post,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          Activate
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Main Information -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Series Details -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg font-medium text-gray-900">Series Details</h3>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Series Code</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @invoice_series[:series_code] %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Year</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @invoice_series[:year] %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Series Type</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @invoice_series[:series_type]&.humanize || '-' %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Current Number</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @invoice_series[:current_number] || 0 %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Next Number</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono"><%= (@invoice_series[:current_number] || 0) + 1 %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Format</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono">
                <%= @invoice_series[:series_code] %>-<%= @invoice_series[:year] %>-<%= "%04d" % ((@invoice_series[:current_number] || 0) + 1) %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Legal Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg font-medium text-gray-900">Legal Information</h3>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <dl class="space-y-6">
            <div>
              <dt class="text-sm font-medium text-gray-500">Legal Justification</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @invoice_series[:legal_justification] || "No justification provided" %>
              </dd>
            </div>
            <div class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Activation Date</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @invoice_series[:activation_date] ? Date.parse(@invoice_series[:activation_date]).strftime("%B %d, %Y") : "Not set" %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Deactivation Date</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @invoice_series[:deactivation_date] ? Date.parse(@invoice_series[:deactivation_date]).strftime("%B %d, %Y") : "Active" %>
                </dd>
              </div>
            </div>
          </dl>
        </div>
      </div>

      <!-- Statistics -->
      <% if @statistics %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg font-medium text-gray-900">Usage Statistics</h3>
          </div>
          <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Total Invoices</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @statistics[:total_invoices] || 0 %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Numbers Used</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @statistics[:numbers_used] || 0 %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Gaps Detected</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900">
                  <% if (@statistics[:gaps_count] || 0) > 0 %>
                    <span class="text-red-600"><%= @statistics[:gaps_count] %></span>
                  <% else %>
                    <span class="text-green-600">0</span>
                  <% end %>
                </dd>
              </div>
            </dl>
            
            <% if @statistics[:last_used_date] %>
              <div class="mt-6">
                <dt class="text-sm font-medium text-gray-500">Last Used</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= Date.parse(@statistics[:last_used_date]).strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <div class="space-y-3">
            <%= link_to compliance_company_invoice_series_path(@company[:id], @invoice_series[:id]),
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                data: { turbo_frame: "compliance_modal" } do %>
              <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
              </svg>
              Check Compliance
            <% end %>
            
            <%= link_to statistics_company_invoice_series_path(@company[:id], @invoice_series[:id]),
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                data: { turbo_frame: "statistics_modal" } do %>
              <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
              </svg>
              View Statistics
            <% end %>
          </div>
        </div>
      </div>

      <!-- Metadata -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg font-medium text-gray-900">Metadata</h3>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @invoice_series[:created_at] ? Date.parse(@invoice_series[:created_at]).strftime("%B %d, %Y") : "-" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @invoice_series[:updated_at] ? Date.parse(@invoice_series[:updated_at]).strftime("%B %d, %Y") : "-" %>
              </dd>
            </div>
            <% if @invoice_series[:created_by] %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Created By</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @invoice_series[:created_by] %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modals placeholders for Turbo Frames -->
<turbo-frame id="compliance_modal"></turbo-frame>
<turbo-frame id="statistics_modal"></turbo-frame>