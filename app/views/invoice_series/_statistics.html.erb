<div class="bg-white shadow rounded-lg p-6">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Usage Statistics</h3>
  
  <% if statistics %>
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Total Invoices</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= statistics[:total_invoices] || 0 %></dd>
      </div>
      
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Numbers Used</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= statistics[:numbers_used] || 0 %></dd>
      </div>
      
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Gaps Detected</dt>
        <dd class="mt-1 text-2xl font-semibold <%= statistics[:gaps_count].to_i > 0 ? 'text-red-600' : 'text-green-600' %>">
          <%= statistics[:gaps_count] || 0 %>
        </dd>
      </div>
      
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Last Used Date</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= statistics[:last_used_date] ? Date.parse(statistics[:last_used_date]).strftime('%B %d, %Y') : 'Never' %>
        </dd>
      </div>
    </dl>
    
    <% if statistics[:gaps] && statistics[:gaps].any? %>
      <div class="mt-6">
        <h4 class="text-sm font-medium text-gray-900">Missing Numbers</h4>
        <div class="mt-2 flex flex-wrap gap-2">
          <% statistics[:gaps].each do |gap| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <%= gap %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-sm text-gray-500">No statistics available</p>
  <% end %>
</div>