<% breadcrumb ["Companies", companies_path], [@company[:name], company_path(@company[:id])], "Invoice Series" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Invoice Series</h1>
      <p class="mt-1 text-sm text-gray-600">Manage invoice numbering series for <%= @company[:name] %></p>
    </div>
    <div class="mt-4 sm:mt-0 flex space-x-3">
      <%= link_to new_company_invoice_series_path(@company[:id]), 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        New Series
      <% end %>
      
      <% if Date.current.month >= 11 %>
        <%= button_to rollover_company_invoice_series_index_path(@company[:id]),
            method: :post,
            params: { from_year: Date.current.year, to_year: Date.current.year + 1 },
            data: { confirm: "Rollover all active series to #{Date.current.year + 1}?" },
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
          </svg>
          Rollover to <%= Date.current.year + 1 %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg p-4">
    <%= form_with url: company_invoice_series_index_path(@company[:id]), method: :get, local: true, class: "flex flex-wrap gap-4" do |f| %>
      <div>
        <%= f.label :year, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :year, options_for_select(@years, params[:year]), 
            { include_blank: "All years" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      
      <div>
        <%= f.label :series_type, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :series_type, options_for_select(@series_types, params[:series_type]),
            { include_blank: "All types" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="flex items-end">
        <%= f.check_box :active_only, checked: params[:active_only] == 'true', class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        <%= f.label :active_only, "Active only", class: "ml-2 text-sm text-gray-700" %>
      </div>
      
      <div class="flex items-end">
        <%= f.submit "Filter", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <!-- Series List -->
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <% if @invoice_series.any? %>
      <ul class="divide-y divide-gray-200">
        <% @invoice_series.each do |series| %>
          <li>
            <%= link_to company_invoice_series_path(@company[:id], series[:id]), 
                class: "block hover:bg-gray-50 px-4 py-4 sm:px-6" do %>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <span class="inline-flex items-center justify-center h-12 w-12 rounded-md bg-indigo-100 text-indigo-600">
                      <span class="text-lg font-medium"><%= series[:series_code] %></span>
                    </span>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= series[:series_name] %>
                    </div>
                    <div class="flex items-center mt-1 space-x-3">
                      <span class="text-sm text-gray-500">Year: <%= series[:year] %></span>
                      <span class="text-sm text-gray-500">Current: <%= series[:current_number] %></span>
                      <span class="text-sm text-gray-500">Type: <%= series[:series_type]&.humanize %></span>
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center space-x-2">
                  <% if series[:is_default] %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                      Default
                    </span>
                  <% end %>
                  
                  <% if series[:is_active] %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      Active
                    </span>
                  <% else %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                      Inactive
                    </span>
                  <% end %>
                  
                  <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                  </svg>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No invoice series</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new invoice series.</p>
        <div class="mt-6">
          <%= link_to new_company_invoice_series_path(@company[:id]),
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            New Series
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>