<% content_for :title, @page_title %>

<div class="max-w-7xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @page_title %></h1>
      <p class="text-gray-600 mt-1">Manage transitions for the <%= @workflow_definition['name'] %> workflow</p>
    </div>
    <div class="flex gap-3">
      <%= link_to workflow_definition_path(@workflow_definition['id']),
                  class: "btn-secondary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Workflow
      <% end %>
      <%= link_to new_workflow_definition_workflow_transition_path(@workflow_definition['id']),
                  class: "btn-primary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        New Transition
      <% end %>
    </div>
  </div>

  <% if @workflow_transitions.any? %>
    <!-- States Reference -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Available States</h2>
        <p class="text-sm text-gray-600 mt-1">States available for transitions in this workflow</p>
      </div>
      <div class="px-6 py-4">
        <div class="flex flex-wrap gap-3">
          <% @workflow_states.sort_by { |state| state['position'] || 0 }.each do |state| %>
            <div class="flex items-center bg-gray-50 rounded-full px-3 py-1">
              <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= state['color'] || '#6B7280' %>"></div>
              <span class="text-sm font-medium text-gray-700"><%= state['display_name'] %></span>
              <span class="text-xs text-gray-500 ml-2">(#<%= state['id'] %>)</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Transitions Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Workflow Transitions</h2>
        <p class="text-sm text-gray-600 mt-1">Configure how invoices move between workflow states</p>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Transition
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                From State
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                To State
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Requirements
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @workflow_transitions.each do |transition| %>
              <% from_state = @workflow_states.find { |s| s['id'] == transition['from_state_id'] } %>
              <% to_state = @workflow_states.find { |s| s['id'] == transition['to_state_id'] } %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= transition['display_name'] %>
                    </div>
                    <div class="text-sm text-gray-500 font-mono">
                      <%= transition['name'] %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if from_state %>
                    <div class="flex items-center">
                      <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= from_state['color'] || '#6B7280' %>"></div>
                      <span class="text-sm text-gray-900"><%= from_state['display_name'] %></span>
                    </div>
                  <% else %>
                    <span class="text-sm text-gray-500 italic">Any State</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if to_state %>
                    <div class="flex items-center">
                      <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= to_state['color'] || '#6B7280' %>"></div>
                      <span class="text-sm text-gray-900"><%= to_state['display_name'] %></span>
                    </div>
                  <% else %>
                    <span class="text-sm text-gray-500 italic">State not found</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex flex-wrap gap-2">
                    <% if transition['requires_comment'] %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        Comment Required
                      </span>
                    <% end %>
                    <% if transition['required_roles'] && transition['required_roles'].any? %>
                      <% transition['required_roles'].each do |role| %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          Role: <%= role.humanize %>
                        </span>
                      <% end %>
                    <% end %>
                    <% if transition['guard_conditions'] && transition['guard_conditions'].any? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                        <%= transition['guard_conditions'].count %> Condition<%= 's' if transition['guard_conditions'].count != 1 %>
                      </span>
                    <% end %>
                    <% unless transition['requires_comment'] || (transition['required_roles'] && transition['required_roles'].any?) || (transition['guard_conditions'] && transition['guard_conditions'].any?) %>
                      <span class="text-sm text-gray-500 italic">No special requirements</span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex gap-2">
                    <%= link_to workflow_definition_workflow_transition_path(@workflow_definition['id'], transition['id']),
                                class: "text-blue-600 hover:text-blue-700" do %>
                      View
                    <% end %>
                    <%= link_to edit_workflow_definition_workflow_transition_path(@workflow_definition['id'], transition['id']),
                                class: "text-blue-600 hover:text-blue-700" do %>
                      Edit
                    <% end %>
                    <%= link_to workflow_definition_workflow_transition_path(@workflow_definition['id'], transition['id']),
                                method: :delete,
                                data: {
                                  confirm: "Are you sure you want to delete the '#{transition['display_name']}' transition?",
                                  turbo_method: :delete
                                },
                                class: "text-red-600 hover:text-red-700" do %>
                      Delete
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Transitions Summary -->
    <div class="mt-8 bg-gray-50 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Workflow Summary</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <div class="text-2xl font-bold text-blue-600"><%= @workflow_transitions.count %></div>
          <div class="text-sm text-gray-600">Total Transitions</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-green-600">
            <%= @workflow_transitions.count { |t| t['requires_comment'] } %>
          </div>
          <div class="text-sm text-gray-600">Require Comments</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-purple-600">
            <%= @workflow_transitions.count { |t| t['required_roles'] && t['required_roles'].any? } %>
          </div>
          <div class="text-sm text-gray-600">Have Role Requirements</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-orange-600">
            <%= @workflow_transitions.count { |t| t['guard_conditions'] && t['guard_conditions'].any? } %>
          </div>
          <div class="text-sm text-gray-600">Have Guard Conditions</div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No workflow transitions</h3>
      <p class="mt-1 text-sm text-gray-500">
        <% if @workflow_states.empty? %>
          Create workflow states first, then add transitions between them.
        <% else %>
          Get started by creating your first workflow transition.
        <% end %>
      </p>
      <div class="mt-6">
        <% if @workflow_states.any? %>
          <%= link_to new_workflow_definition_workflow_transition_path(@workflow_definition['id']),
                      class: "btn-primary" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create First Transition
          <% end %>
        <% else %>
          <%= link_to workflow_definition_workflow_states_path(@workflow_definition['id']),
                      class: "btn-primary" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create States First
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>