<% content_for :title, @page_title %>

<div class="max-w-4xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center text-sm text-gray-500 mb-2">
      <%= link_to "Workflow Definitions", workflow_definitions_path, class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <%= link_to @workflow_definition[:name] || @workflow_definition['name'], workflow_definition_path(@workflow_definition[:id] || @workflow_definition['id']), class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <%= link_to "Transitions", workflow_definition_workflow_transitions_path(@workflow_definition[:id] || @workflow_definition['id']), class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <%= link_to @workflow_transition[:display_name] || @workflow_transition['display_name'], workflow_definition_workflow_transition_path(@workflow_definition[:id] || @workflow_definition['id'], @workflow_transition[:id] || @workflow_transition['id']), class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <span>Edit</span>
    </div>
    <div class="flex items-center mb-2">
      <h1 class="text-3xl font-bold text-gray-900"><%= @page_title %></h1>
    </div>
    <p class="text-gray-600 mt-1">Modify the properties and requirements of this workflow transition</p>
  </div>

  <!-- Current Transition Flow -->
  <div class="bg-blue-50 rounded-lg p-6 mb-8">
    <div class="flex items-center justify-between">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Current Transition Flow</h3>
          <p class="text-sm text-blue-700 mt-1">This is how the transition currently works</p>
        </div>
      </div>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <!-- Current From State -->
      <div class="text-center">
        <% from_state = @workflow_states.find { |s| (s[:code] || s['code']) == (@workflow_transition[:from_state_code] || @workflow_transition['from_state_code']) } %>
        <% if from_state %>
          <div class="w-12 h-12 rounded-full mx-auto mb-2 flex items-center justify-center text-white font-medium"
               style="background-color: <%= (from_state[:color] || from_state['color']) || '#6B7280' %>">
            <%= (from_state[:display_name] || from_state['display_name']).split.map(&:first).join.upcase %>
          </div>
          <div class="text-xs font-medium text-blue-900"><%= from_state[:display_name] || from_state['display_name'] %></div>
        <% else %>
          <div class="w-12 h-12 rounded-full mx-auto mb-2 flex items-center justify-center text-white font-medium bg-gray-400">
            *
          </div>
          <div class="text-xs font-medium text-blue-700">Any State</div>
        <% end %>
      </div>

      <!-- Arrow with transition name -->
      <div class="flex-1 flex flex-col items-center">
        <svg class="w-8 h-8 text-blue-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
        <div class="text-xs font-medium text-blue-800 bg-white px-2 py-1 rounded-full">
          <%= @workflow_transition[:display_name] || @workflow_transition['display_name'] %>
        </div>
      </div>

      <!-- Current To State -->
      <div class="text-center">
        <% to_state = @workflow_states.find { |s| (s[:code] || s['code']) == (@workflow_transition[:to_state_code] || @workflow_transition['to_state_code']) } %>
        <% if to_state %>
          <div class="w-12 h-12 rounded-full mx-auto mb-2 flex items-center justify-center text-white font-medium"
               style="background-color: <%= (to_state[:color] || to_state['color']) || '#6B7280' %>">
            <%= (to_state[:display_name] || to_state['display_name']).split.map(&:first).join.upcase %>
          </div>
          <div class="text-xs font-medium text-blue-900"><%= to_state[:display_name] || to_state['display_name'] %></div>
        <% else %>
          <div class="w-12 h-12 rounded-full mx-auto mb-2 flex items-center justify-center text-white font-medium bg-gray-400">
            ?
          </div>
          <div class="text-xs font-medium text-blue-700">Unknown State</div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Transition Configuration</h2>
      <p class="text-sm text-gray-600 mt-1">Update the properties and requirements of this workflow transition</p>
    </div>
    <div class="px-6 py-6">
      <%= render 'form',
                 form_url: workflow_definition_workflow_transition_path(@workflow_definition[:id] || @workflow_definition['id'], @workflow_transition[:id] || @workflow_transition['id']),
                 form_method: :patch,
                 submit_label: 'Update Transition' %>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="mt-8 bg-red-50 rounded-lg border border-red-200">
    <div class="px-6 py-4 border-b border-red-200">
      <h3 class="text-lg font-medium text-red-800">Danger Zone</h3>
    </div>
    <div class="px-6 py-4">
      <div class="flex items-start justify-between">
        <div>
          <h4 class="text-sm font-medium text-red-800">Delete this transition</h4>
          <p class="text-sm text-red-600 mt-1">
            Once you delete a transition, there is no going back. Please be certain.
            This may affect invoices that could use this transition path.
          </p>
        </div>
        <div class="ml-6">
          <%= link_to workflow_definition_workflow_transition_path(@workflow_definition[:id] || @workflow_definition['id'], @workflow_transition[:id] || @workflow_transition['id']),
                      method: :delete,
                      data: {
                        confirm: "Are you sure you want to delete the '#{@workflow_transition[:display_name] || @workflow_transition['display_name']}' transition?\n\nThis action cannot be undone and may:\n- Remove a workflow path\n- Affect invoices that could use this transition\n- Impact workflow functionality\n\nType 'DELETE' to confirm:",
                        turbo_method: :delete
                      },
                      class: "btn-danger btn-sm" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Delete Transition
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>