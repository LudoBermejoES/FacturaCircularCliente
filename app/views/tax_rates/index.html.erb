<% breadcrumb "Tax Rates" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Tax Rates</h1>
      <p class="mt-1 text-sm text-gray-600">View current tax rates and exemptions (read-only)</p>
    </div>
    
    <div class="mt-4 sm:mt-0">
      <div class="text-sm text-amber-600 bg-amber-50 px-3 py-2 rounded-md border border-amber-200">
        ℹ️ Tax rates are managed by the system and cannot be modified through this interface
      </div>
    </div>
  </div>
  
  <!-- Tax Rates -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Current Tax Rates</h3>
      <p class="mt-1 text-sm text-gray-500">System-managed tax rates for invoice calculations</p>
    </div>
    
    <div class="overflow-hidden">
      <% if @tax_rates && @tax_rates.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Rate
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Type
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @tax_rates.each do |rate| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= rate[:name] %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= number_to_percentage(rate[:rate], precision: 1) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    <%= rate[:type]&.humanize %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="text-center py-12">
          <div class="text-sm text-gray-500">No tax rates available</div>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Tax Exemptions -->
  <% if @exemptions && @exemptions.any? %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Tax Exemptions</h3>
        <p class="mt-1 text-sm text-gray-500">Available tax exemption categories</p>
      </div>
      
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Description
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @exemptions.each do |exemption| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= exemption[:name] %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-500">
                    <%= exemption[:description] %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
  
  <!-- Help Section -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">About Tax Management</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p>Tax calculations are performed automatically based on these system rates. For invoice-specific tax calculations, use the tax calculation tools in the invoice details page.</p>
        </div>
      </div>
    </div>
  </div>
</div>