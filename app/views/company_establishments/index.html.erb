<% content_for :title, "Company Establishments" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Company Establishments
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Manage your company's physical locations for tax jurisdiction purposes
      </p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to new_company_establishment_path,
          class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        Add Establishment
      <% end %>
    </div>
  </div>

  <% if @establishments.present? %>
    <!-- Establishments Grid -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @establishments.each do |establishment| %>
        <div class="relative bg-white overflow-hidden shadow rounded-lg">
          <div class="p-6">
            <!-- Header with default indicator -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-lg font-medium text-gray-900">
                  <%= establishment[:display_name] %>
                </h3>
                <% if establishment[:is_default] %>
                  <span class="mt-1 inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                    Default Location
                  </span>
                <% end %>
              </div>
              <div class="flex-shrink-0">
                <!-- Actions Menu -->
                <div class="relative" data-controller="dropdown">
                  <button data-action="click->dropdown#toggle"
                          class="inline-flex items-center rounded-full bg-gray-100 p-2 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                    </svg>
                  </button>
                  <div data-dropdown-target="menu"
                       class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5">
                    <%= link_to company_establishment_path(establishment[:id]),
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                      View Details
                    <% end %>
                    <%= link_to edit_company_establishment_path(establishment[:id]),
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                      Edit
                    <% end %>
                    <% unless establishment[:is_default] %>
                      <%= link_to company_establishment_path(establishment[:id]),
                          method: :delete,
                          data: {
                            confirm: "Are you sure you want to delete this establishment?",
                            turbo_method: :delete
                          },
                          class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-50" do %>
                        Delete
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Address -->
            <div class="mb-4">
              <dt class="sr-only">Address</dt>
              <dd class="text-sm text-gray-600">
                <div class="flex items-start">
                  <svg class="h-5 w-5 text-gray-400 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div class="flex-1">
                    <% if establishment[:full_address].present? %>
                      <%= establishment[:full_address] %>
                    <% else %>
                      <span class="text-gray-400 italic">No address specified</span>
                    <% end %>
                  </div>
                </div>
              </dd>
            </div>

            <!-- Tax Jurisdiction -->
            <div class="mb-4">
              <dt class="text-sm font-medium text-gray-500">Tax Jurisdiction</dt>
              <dd class="mt-1">
                <% if establishment[:tax_jurisdiction_id] %>
                  <%= link_to tax_jurisdiction_path(establishment[:tax_jurisdiction_id]),
                      class: "inline-flex items-center text-sm text-indigo-600 hover:text-indigo-500" do %>
                    <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    View Tax Rules
                  <% end %>
                <% else %>
                  <span class="text-sm text-gray-400 italic">No tax jurisdiction assigned</span>
                <% end %>
              </dd>
            </div>

            <!-- Currency -->
            <div>
              <dt class="text-sm font-medium text-gray-500">Currency</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= establishment[:currency_code] || 'Not specified' %>
              </dd>
            </div>

            <!-- Quick Actions -->
            <div class="mt-6 flex justify-between">
              <%= link_to company_establishment_path(establishment[:id]),
                  class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" do %>
                View Details â†’
              <% end %>
              <%= link_to edit_company_establishment_path(establishment[:id]),
                  class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" do %>
                Edit
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Summary Stats -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">
          Establishment Summary
        </h3>
        <dl class="grid grid-cols-1 gap-5 sm:grid-cols-3">
          <div class="px-4 py-5 bg-gray-50 overflow-hidden sm:p-6 rounded-lg">
            <dt class="text-sm font-medium text-gray-500 truncate">Total Establishments</dt>
            <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @establishments.length %></dd>
          </div>
          <div class="px-4 py-5 bg-gray-50 overflow-hidden sm:p-6 rounded-lg">
            <dt class="text-sm font-medium text-gray-500 truncate">Active Tax Jurisdictions</dt>
            <dd class="mt-1 text-3xl font-semibold text-gray-900">
              <%= @establishments.count { |e| e[:tax_jurisdiction_id].present? } %>
            </dd>
          </div>
          <div class="px-4 py-5 bg-gray-50 overflow-hidden sm:p-6 rounded-lg">
            <dt class="text-sm font-medium text-gray-500 truncate">Different Currencies</dt>
            <dd class="mt-1 text-3xl font-semibold text-gray-900">
              <%= @establishments.map { |e| e[:currency_code] }.compact.uniq.length %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

  <% else %>
    <!-- Empty state -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No establishments found</h3>
      <p class="mt-2 text-sm text-gray-500">
        Get started by creating your first company establishment.
      </p>
      <div class="mt-6">
        <%= link_to new_company_establishment_path,
            class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          Add Your First Establishment
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Include dropdown controller for actions menu -->
<script>
  window.Stimulus = window.Stimulus || {};
  if (!window.Stimulus.controllers) window.Stimulus.controllers = [];

  window.Stimulus.controllers.push({
    name: 'dropdown',
    controller: class extends Stimulus.Controller {
      static targets = ['menu']

      connect() {
        this.close = this.close.bind(this)
      }

      toggle() {
        if (this.menuTarget.classList.contains('hidden')) {
          this.open()
        } else {
          this.close()
        }
      }

      open() {
        this.menuTarget.classList.remove('hidden')
        document.addEventListener('click', this.close)
      }

      close(event) {
        if (event && this.element.contains(event.target)) return
        this.menuTarget.classList.add('hidden')
        document.removeEventListener('click', this.close)
      }
    }
  });
</script>