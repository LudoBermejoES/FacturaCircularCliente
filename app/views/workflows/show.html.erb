<% breadcrumb ["Invoices", invoices_path], [@invoice[:invoice_number], invoice_path(@invoice[:id])], "Workflow" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Invoice Workflow</h1>
      <p class="mt-1 text-sm text-gray-600">
        Manage status transitions for invoice <%= @invoice[:invoice_number] %>
      </p>
    </div>
    
    <div class="space-y-2">
      <div class="flex items-center space-x-2" id="current_workflow_status">
        <span class="text-sm text-gray-500">Current Status:</span>
        <span class="<%= status_badge_class(@invoice[:current_state] || @invoice[:status]) %>">
          <%= (@invoice[:current_state_name] || @invoice[:status]).humanize %>
        </span>
      </div>

      <!-- SLA Tracking -->
      <% if @invoice[:workflow].present? %>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-500">SLA Status:</span>
          <%= render 'shared/sla_indicator', invoice_workflow: @invoice[:workflow] %>
        </div>

        <% if @invoice[:workflow]['sla_deadline'] %>
          <div class="mt-3 p-3 bg-gray-50 rounded-lg">
            <h4 class="text-sm font-medium text-gray-900 mb-2">SLA Details</h4>
            <%= render 'shared/sla_indicator',
                invoice_workflow: @invoice[:workflow],
                show_progress: true %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <!-- Available Transitions and Workflow History -->
  <%= render 'content' %>
  
  <!-- Back Button -->
  <div class="flex justify-start">
    <%= link_to invoice_path(@invoice[:id]), 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="mr-2 -ml-1 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
      </svg>
      Back to Invoice
    <% end %>
  </div>
</div>


<div id="workflow_errors"></div>