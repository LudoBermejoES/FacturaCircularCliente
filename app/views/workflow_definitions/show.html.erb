<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center">
      <%= link_to workflow_definitions_path, class: "text-gray-600 hover:text-gray-800 mr-4" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @workflow_definition['name'] %></h1>
        <p class="text-gray-600 mt-1"><%= @workflow_definition['description'] %></p>
      </div>
    </div>
    <div class="flex space-x-2">
      <%= link_to edit_workflow_definition_path(@workflow_definition['id']),
          class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
      <%= link_to workflow_definition_path(@workflow_definition['id']),
          method: :delete,
          class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg flex items-center",
          confirm: "Are you sure you want to delete this workflow definition?" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <% if flash[:error] %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:error] %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Workflow Details -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Workflow Details</h2>

        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <% if @workflow_definition['is_active'] %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Active
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  Inactive
                </span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Type</dt>
            <dd class="mt-1">
              <% if @workflow_definition['is_global'] %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                  Global Template
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  Company Specific
                </span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Company</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @workflow_definition['company_id'] %>
                Company #<%= @workflow_definition['company_id'] %>
              <% else %>
                <span class="text-gray-500">Global (All Companies)</span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Version</dt>
            <dd class="mt-1 text-sm text-gray-900">
              v<%= @workflow_definition['version'] || '1' %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @workflow_definition['created_at'] %>
                <%= Date.parse(@workflow_definition['created_at']).strftime("%B %d, %Y") %>
              <% else %>
                <span class="text-gray-500">Unknown</span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Workflow Visualization -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-sm rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-lg font-medium text-gray-900">Workflow Visualization</h2>
          <div class="text-sm text-gray-500">
            <%= @states.size %> states, <%= @transitions.size %> transitions
          </div>
        </div>

        <!-- Visual Workflow Diagram -->
        <% if @states.any? %>
          <div class="mb-6 border rounded-lg p-4 bg-gray-50">
            <div data-controller="workflow-diagram"
                 data-workflow-diagram-states-value="<%= @states.to_json %>"
                 data-workflow-diagram-transitions-value="<%= @transitions.to_json %>"
                 data-workflow-diagram-width-value="700"
                 data-workflow-diagram-height-value="300">
              <svg data-workflow-diagram-target="canvas"
                   class="w-full h-auto border border-gray-200 rounded bg-white"></svg>
            </div>
          </div>
        <% end %>

        <!-- States -->
        <div class="mb-6">
          <h3 class="text-md font-medium text-gray-700 mb-3">States</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <% @states.sort_by { |s| s['position'] || 0 }.each do |state| %>
              <div class="border rounded-lg p-3 <%= 'border-green-200 bg-green-50' if state['is_initial'] %>">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= state['color'] || '#gray' %>"></div>
                    <div>
                      <div class="font-medium text-sm"><%= state['display_name'] %></div>
                      <div class="text-xs text-gray-500"><%= state['name'] %></div>
                    </div>
                  </div>
                  <div class="flex space-x-1">
                    <% if state['is_initial'] %>
                      <span class="inline-flex px-1 py-0.5 text-xs font-medium rounded bg-green-100 text-green-800">
                        Start
                      </span>
                    <% end %>
                    <% if state['is_final'] %>
                      <span class="inline-flex px-1 py-0.5 text-xs font-medium rounded bg-blue-100 text-blue-800">
                        End
                      </span>
                    <% end %>
                    <% if state['is_error'] %>
                      <span class="inline-flex px-1 py-0.5 text-xs font-medium rounded bg-red-100 text-red-800">
                        Error
                      </span>
                    <% end %>
                  </div>
                </div>
                <% if state['category'] %>
                  <div class="mt-1">
                    <span class="inline-flex px-1 py-0.5 text-xs rounded bg-gray-100 text-gray-700">
                      <%= state['category'].humanize %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Transitions -->
        <div>
          <h3 class="text-md font-medium text-gray-700 mb-3">Transitions</h3>
          <% if @transitions.any? %>
            <div class="space-y-3">
              <% @transitions.each do |transition| %>
                <% from_state = @states.find { |s| s['id'] == transition['from_state_id'] } %>
                <% to_state = @states.find { |s| s['id'] == transition['to_state_id'] } %>
                <div class="border rounded-lg p-3">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <div class="flex items-center space-x-2">
                        <span class="text-sm font-medium"><%= from_state&.dig('display_name') || 'Unknown' %></span>
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                        <span class="text-sm font-medium"><%= to_state&.dig('display_name') || 'Unknown' %></span>
                      </div>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= transition['display_name'] %>
                    </div>
                  </div>

                  <% if transition['required_roles']&.any? || transition['required_permissions']&.any? || transition['requires_comment'] %>
                    <div class="mt-2 flex flex-wrap gap-1">
                      <% if transition['required_roles']&.any? %>
                        <% transition['required_roles'].each do |role| %>
                          <span class="inline-flex px-2 py-1 text-xs rounded bg-blue-100 text-blue-800">
                            Role: <%= role.humanize %>
                          </span>
                        <% end %>
                      <% end %>

                      <% if transition['required_permissions']&.any? %>
                        <% transition['required_permissions'].each do |permission| %>
                          <span class="inline-flex px-2 py-1 text-xs rounded bg-purple-100 text-purple-800">
                            Permission: <%= permission.humanize %>
                          </span>
                        <% end %>
                      <% end %>

                      <% if transition['requires_comment'] %>
                        <span class="inline-flex px-2 py-1 text-xs rounded bg-yellow-100 text-yellow-800">
                          Comment Required
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6 text-gray-500">
              <p>No transitions defined for this workflow</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>