<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center">
      <%= link_to workflow_definitions_path, class: "text-gray-600 hover:text-gray-800 mr-4" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @workflow_definition[:name] || @workflow_definition['name'] %></h1>
        <p class="text-gray-600 mt-1"><%= @workflow_definition[:description] || @workflow_definition['description'] %></p>
      </div>
    </div>
    <div class="flex space-x-2">
      <%= link_to edit_workflow_definition_path(@workflow_definition[:id] || @workflow_definition['id']),
          class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
      <%= link_to workflow_definition_path(@workflow_definition[:id] || @workflow_definition['id']),
          method: :delete,
          class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg flex items-center",
          confirm: "Are you sure you want to delete this workflow definition?" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <% if flash[:error] %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:error] %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Workflow Details -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Workflow Details</h2>

        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <% if @workflow_definition[:is_active] || @workflow_definition['is_active'] %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Active
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  Inactive
                </span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Type</dt>
            <dd class="mt-1">
              <% if @workflow_definition[:is_global] || @workflow_definition['is_global'] %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                  Global Template
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  Company Specific
                </span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Company</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @workflow_definition[:company_id] || @workflow_definition['company_id'] %>
                Company #<%= @workflow_definition[:company_id] || @workflow_definition['company_id'] %>
              <% else %>
                <span class="text-gray-500">Global (All Companies)</span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Version</dt>
            <dd class="mt-1 text-sm text-gray-900">
              v<%= @workflow_definition[:version] || @workflow_definition['version'] || '1' %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @workflow_definition[:created_at] || @workflow_definition['created_at'] %>
                <%= Date.parse((@workflow_definition[:created_at] || @workflow_definition['created_at']).to_s).strftime("%B %d, %Y") %>
              <% else %>
                <span class="text-gray-500">Unknown</span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Workflow Visualization -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-sm rounded-lg p-6">
        <!-- Visual Workflow Diagram -->
        <% if @states.any? %>
          <div class="mb-6" data-controller="workflow-diagram"
               data-workflow-diagram-states-value="<%= @states.to_json %>"
               data-workflow-diagram-transitions-value="<%= @transitions.to_json %>"
               data-workflow-diagram-width-value="700"
               data-workflow-diagram-height-value="300">

            <div class="flex justify-between items-center mb-4">
              <h2 class="text-lg font-medium text-gray-900">Workflow Visualization</h2>
              <div class="flex items-center space-x-4">
                <div class="text-sm text-gray-500">
                  <%= @states.size %> states, <%= @transitions.size %> transitions
                </div>
                <button data-workflow-diagram-target="maximizeBtn"
                        data-action="click->workflow-diagram#toggleMaximize"
                        class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors cursor-pointer"
                        type="button"
                        title="Maximize diagram">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Fullscreen overlay container -->
            <div data-workflow-diagram-target="fullscreenOverlay"
                 class="hidden fixed inset-0 bg-white z-50 overflow-auto">
              <div class="p-6">
                <div class="flex justify-between items-center mb-4">
                  <h2 class="text-xl font-bold text-gray-900">Workflow Visualization - <%= @workflow_definition[:name] || @workflow_definition['name'] %></h2>
                  <button data-action="click->workflow-diagram#toggleMaximize"
                          class="text-gray-500 hover:text-gray-700 transition-colors"
                          title="Minimize diagram">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 9V5m0 0h4M9 5l5 5m-5 6v4m0 0h4m-4 0l5-5m6-5l-5 5m5-5v4m0-4h-4m-1 10l-5-5m0 0v4m0-4h4"></path>
                    </svg>
                  </button>
                </div>
                <div class="border rounded-lg p-4 bg-gray-50">
                  <svg data-workflow-diagram-target="canvas"
                       class="w-full h-auto border border-gray-200 rounded bg-white"></svg>
                </div>
              </div>
            </div>

            <!-- Normal view container -->
            <div class="border rounded-lg p-4 bg-gray-50" data-workflow-diagram-target="diagramContainer">
              <svg data-workflow-diagram-target="normalCanvas"
                   class="w-full h-auto border border-gray-200 rounded bg-white"></svg>
            </div>
          </div>
        <% else %>
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-gray-900">Workflow Visualization</h2>
            <div class="text-sm text-gray-500">
              No states defined
            </div>
          </div>
          <div class="text-center py-8 text-gray-500">
            No workflow states have been defined yet.
          </div>
        <% end %>

        <!-- States -->
        <div class="mb-6">
          <div class="flex justify-between items-center mb-3">
            <h3 class="text-md font-medium text-gray-700">States</h3>
            <%= link_to new_workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id']),
                class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm flex items-center" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add State
            <% end %>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <% @states.sort_by { |s| (s[:position] || s['position']) || 0 }.each do |state| %>
              <div class="border rounded-lg p-3 <%= 'border-green-200 bg-green-50' if state[:is_initial] || state['is_initial'] %>">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= state[:color] || state['color'] || '#gray' %>"></div>
                    <div>
                      <div class="font-medium text-sm"><%= state[:name] || state['name'] %></div>
                      <div class="text-xs text-gray-500"><%= state[:code] || state['code'] %></div>
                    </div>
                  </div>
                  <div class="flex space-x-1">
                    <% if state[:is_initial] || state['is_initial'] %>
                      <span class="inline-flex px-1 py-0.5 text-xs font-medium rounded bg-green-100 text-green-800">
                        Start
                      </span>
                    <% end %>
                    <% if state[:is_final] || state['is_final'] %>
                      <span class="inline-flex px-1 py-0.5 text-xs font-medium rounded bg-blue-100 text-blue-800">
                        End
                      </span>
                    <% end %>
                    <% if state[:is_error] || state['is_error'] %>
                      <span class="inline-flex px-1 py-0.5 text-xs font-medium rounded bg-red-100 text-red-800">
                        Error
                      </span>
                    <% end %>
                    <!-- State Actions -->
                    <div class="flex space-x-1">
                      <%= link_to edit_workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], state[:id] || state['id']),
                          class: "text-blue-600 hover:text-blue-800" do %>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      <% end %>
                      <%= link_to workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], state[:id] || state['id']),
                          method: :delete,
                          class: "text-red-600 hover:text-red-800",
                          confirm: "Are you sure you want to delete this state?" do %>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>
                <% if state[:category] || state['category'] %>
                  <div class="mt-1">
                    <span class="inline-flex px-1 py-0.5 text-xs rounded bg-gray-100 text-gray-700">
                      <%= (state[:category] || state['category']).humanize %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Transitions -->
        <div>
          <div class="flex justify-between items-center mb-3">
            <h3 class="text-md font-medium text-gray-700">Transitions</h3>
            <%= link_to new_workflow_definition_workflow_transition_path(@workflow_definition[:id] || @workflow_definition['id']),
                class: "bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm flex items-center" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add Transition
            <% end %>
          </div>
          <% if @transitions.any? %>
            <div class="space-y-3">
              <% @transitions.each do |transition| %>
                <% from_state = @states.find { |s| (s[:code] || s['code']) == (transition[:from_state_code] || transition['from_state_code']) } %>
                <% to_state = @states.find { |s| (s[:code] || s['code']) == (transition[:to_state_code] || transition['to_state_code']) } %>
                <div class="border rounded-lg p-3">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <div class="flex items-center space-x-2">
                        <span class="text-sm font-medium"><%= (from_state&.dig(:name) || from_state&.dig('name')) || 'Any State' %></span>
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                        <span class="text-sm font-medium"><%= (to_state&.dig(:name) || to_state&.dig('name')) || 'Unknown' %></span>
                      </div>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= transition[:name] || transition['name'] %>
                    </div>
                  </div>

                  <% if (transition[:required_roles] || transition['required_roles'])&.any? || (transition[:required_permissions] || transition['required_permissions'])&.any? || (transition[:requires_comment] || transition['requires_comment']) %>
                    <div class="mt-2 flex flex-wrap gap-1">
                      <% if (transition[:required_roles] || transition['required_roles'])&.any? %>
                        <% (transition[:required_roles] || transition['required_roles']).each do |role| %>
                          <span class="inline-flex px-2 py-1 text-xs rounded bg-blue-100 text-blue-800">
                            Role: <%= role.humanize %>
                          </span>
                        <% end %>
                      <% end %>

                      <% if transition['required_permissions']&.any? %>
                        <% transition['required_permissions'].each do |permission| %>
                          <span class="inline-flex px-2 py-1 text-xs rounded bg-purple-100 text-purple-800">
                            Permission: <%= permission.humanize %>
                          </span>
                        <% end %>
                      <% end %>

                      <% if transition['requires_comment'] %>
                        <span class="inline-flex px-2 py-1 text-xs rounded bg-yellow-100 text-yellow-800">
                          Comment Required
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6 text-gray-500">
              <p>No transitions defined for this workflow</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>