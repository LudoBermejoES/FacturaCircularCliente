<% content_for :title, @page_title %>

<div class="max-w-4xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center text-sm text-gray-500 mb-2">
      <%= link_to "Workflow Definitions", workflow_definitions_path, class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <%= link_to (@workflow_definition[:name] || @workflow_definition['name']), workflow_definition_path(@workflow_definition[:id] || @workflow_definition['id']), class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <%= link_to "States", workflow_definition_workflow_states_path(@workflow_definition[:id] || @workflow_definition['id']), class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <%= link_to ((@original_state || @workflow_state)[:display_name] || (@original_state || @workflow_state)['display_name']), workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], (@original_state || @workflow_state)[:id] || (@original_state || @workflow_state)['id']), class: "hover:text-gray-700" %>
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <span>Edit</span>
    </div>
    <div class="flex items-center mb-2">
      <div class="w-6 h-6 rounded-full mr-3" style="background-color: <%= ((@original_state || @workflow_state)[:color] || (@original_state || @workflow_state)['color']) || '#6B7280' %>"></div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @page_title %></h1>
    </div>
    <p class="text-gray-600 mt-1">Modify the properties and behavior of this workflow state</p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">State Configuration</h2>
      <p class="text-sm text-gray-600 mt-1">Update the properties and behavior of this workflow state</p>
    </div>
    <div class="px-6 py-6">
      <%= render 'form',
                 form_url: workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], (@original_state || @workflow_state)[:id] || (@original_state || @workflow_state)['id']),
                 form_method: :patch,
                 submit_label: 'Update State' %>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="mt-8 bg-red-50 rounded-lg border border-red-200">
    <div class="px-6 py-4 border-b border-red-200">
      <h3 class="text-lg font-medium text-red-800">Danger Zone</h3>
    </div>
    <div class="px-6 py-4">
      <div class="flex items-start justify-between">
        <div>
          <h4 class="text-sm font-medium text-red-800">Delete this state</h4>
          <p class="text-sm text-red-600 mt-1">
            Once you delete a state, there is no going back. Please be certain.
            This may break existing workflows and transitions.
          </p>
        </div>
        <div class="ml-6">
          <%= link_to workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], (@original_state || @workflow_state)[:id] || (@original_state || @workflow_state)['id']),
                      method: :delete,
                      data: {
                        confirm: "Are you sure you want to delete the '#{((@original_state || @workflow_state)[:display_name] || (@original_state || @workflow_state)['display_name'])}' state?\n\nThis action cannot be undone and may:\n- Break existing workflows\n- Remove transitions that use this state\n- Affect invoices currently in this state\n\nType 'DELETE' to confirm:",
                        turbo_method: :delete
                      },
                      class: "btn-danger btn-sm" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Delete State
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>