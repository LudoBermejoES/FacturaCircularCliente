<% content_for :title, @page_title %>

<div class="max-w-7xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @page_title %></h1>
      <p class="text-gray-600 mt-1">Manage states for the <%= @workflow_definition[:name] || @workflow_definition['name'] %> workflow</p>
    </div>
    <div class="flex gap-3">
      <%= link_to workflow_definition_path(@workflow_definition[:id] || @workflow_definition['id']),
                  class: "btn-secondary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Workflow
      <% end %>
      <%= link_to new_workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id']),
                  class: "btn-primary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        New State
      <% end %>
    </div>
  </div>

  <% if @workflow_states.any? %>
    <!-- States Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @workflow_states.sort_by { |state| (state[:position] || state['position']) || 0 }.each do |state| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <!-- State Header -->
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full mr-3" style="background-color: <%= state['color'] || '#6B7280' %>"></div>
              <h3 class="text-lg font-semibold text-gray-900"><%= state['display_name'] %></h3>
            </div>
            <div class="flex gap-2">
              <% if state['is_initial'] %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Initial
                </span>
              <% end %>
              <% if state['is_final'] %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Final
                </span>
              <% end %>
            </div>
          </div>

          <!-- State Details -->
          <div class="space-y-2 mb-4">
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Name:</span>
              <span class="text-gray-900 font-mono"><%= state['name'] %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Category:</span>
              <span class="text-gray-900 capitalize"><%= state['category'] || 'None' %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Position:</span>
              <span class="text-gray-900"><%= state['position'] || 0 %></span>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex gap-2 pt-4 border-t border-gray-100">
            <%= link_to workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], state[:id] || state['id']),
                        class: "btn-sm btn-secondary flex-1 text-center" do %>
              View
            <% end %>
            <%= link_to edit_workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], state[:id] || state['id']),
                        class: "btn-sm btn-secondary flex-1 text-center" do %>
              Edit
            <% end %>
            <%= link_to workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id'], state[:id] || state['id']),
                        method: :delete,
                        data: {
                          confirm: "Are you sure you want to delete the '#{state['display_name']}' state? This cannot be undone.",
                          turbo_method: :delete
                        },
                        class: "btn-sm btn-danger text-center" do %>
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- States Summary -->
    <div class="mt-8 bg-gray-50 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Workflow Summary</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <div class="text-2xl font-bold text-blue-600"><%= @workflow_states.count %></div>
          <div class="text-sm text-gray-600">Total States</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-green-600">
            <%= @workflow_states.count { |s| s['is_initial'] } %>
          </div>
          <div class="text-sm text-gray-600">Initial States</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-purple-600">
            <%= @workflow_states.count { |s| s['is_final'] } %>
          </div>
          <div class="text-sm text-gray-600">Final States</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-gray-600">
            <%= @workflow_states.group_by { |s| s['category'] }.keys.compact.count %>
          </div>
          <div class="text-sm text-gray-600">Categories</div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No workflow states</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating your first workflow state.</p>
      <div class="mt-6">
        <%= link_to new_workflow_definition_workflow_state_path(@workflow_definition[:id] || @workflow_definition['id']),
                    class: "btn-primary" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create First State
        <% end %>
      </div>
    </div>
  <% end %>
</div>